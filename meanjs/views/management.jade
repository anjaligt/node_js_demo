       a(href='javascript:void(0)',data-query='Y').county_by_name_search Y  
       a(href='javascript:void(0)',data-query='Z').county_by_name_search Z  
  

  div.search_result


  





       // Add Teacher Modal
    .modal.fade#addcountiesModal
      .modal-dialog
        .modal-content
          .modal-header
            h4.modal-title
              .row
                .col-md-12.add-school Add New County
                  button(type='button', data-dismiss='modal', aria-hidden='true').close ×

              .row
                .alert2.alert-danger.teacher-alert(role='alert').hide
                  p.text-center Please fill the mandatory fields

          .modal-body
            form(role='form', action='/counties/add', method='post', enctype='multipart/form-data', id='addCountyForm')
              .row
                .form-group
                    label(for="countyname", class="col-sm-3 control-label").schools-mandatory County Name
                    .col-sm-9
                      input.form-control(type='text', placeholder='50 characters max', name='countyname', id='countyname', maxlength='50',required='required', autocomplete='off')
                      input.form-control(type='hidden', id='county_check', autocomplete='off')
              .row
                .col-sm-9#countyDiv

              
              hr
              .row
                .col-sm-12
                  button(type='submit').btn.btn-primary.addCountyFormBtn.margin-right-10.pull-right Add


    // Delete County model
  .modal.fade#deleteCountyModal
    .modal-dialog
      .modal-content
        .modal-header
          h4.modal-title
            .row
              .col-md-12.add-school Confirm Removal
                button(type='button', data-dismiss='modal', aria-hidden='true').close ×

            .row
              .alert2.alert-danger.teacher-alert(role='alert').hide
                p.text-center Please fill the mandatory fields

        .modal-body
          form(role='form', action='/county/delete', method='post', enctype='multipart/form-data', id='edit_district_form')
            .row
              .form-group
                  .col-sm-9 Please type "YES" into the field below to confirm the removal:
            .row
              .form-group
                  .col-sm-9
                    input.form-control(type='text', name='confirm_county_delete', id='confirm_county_delete',required='required', autocomplete='off')
                    input.form-control(type='hidden', id='delete_county_id', name='deleteCountyId')

            hr
            .row
              .col-sm-12
                button(type="button", data-dismiss="modal").btn.btn-default Close
                button(type='submit').btn.btn-primary.deleteCountybtn.margin-right-10.pull-right Confirm





  include footer


