extends layout

block content
  include nav

  div.container.main(role="main")

    if messages.info
      br
      .alert.alert-info(role='alert').userAlert
        p #{messages.info}

    if messages.error
      br
      .alert.alert-danger(role='alert').userAlert
        p #{messages.error}

    h2.aaaaa
          .row.left_panel
            .col-sm-6
              a(href='#', id='counties_btn').btn.btn-default Counties (#{counties_count})
            .col-sm-4
              a(href='#',id='app_setting_btn').btn.btn-default App Settings

          .row.right_panel
            .col-sm-4
              a(href='#addcountiesModal',data-toggle='modal', id='add_county_btn').btn.btn-default +Add New County 


  h2.alphabet 
    .row
       a(href='javascript:void(0)',data-query='A').county_by_name_search A   
